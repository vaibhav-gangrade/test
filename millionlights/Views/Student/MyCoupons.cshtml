@model IEnumerable<Millionlights.Models.VoucherCode>
@{

    var couponDetails = ViewBag.CouponsByUserID;
    var userName = Session["UserName"];
    int roleID = 0;
    if (Session["RoleID"] != null)
    {
        roleID = int.Parse(Session["RoleID"].ToString());

    }
}
<link href="~/Content/learn/css/color_scheme.css" rel="stylesheet" />
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>

<script src="//cdn.datatables.net/responsive/1.0.6/js/dataTables.responsive.min.js"></script>

<script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
<link href="~/Content/learn/css/style.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('#CouponsGridview').DataTable();
    });
</script>
<section id="main_content">
    <div class="container">

        <div class="row" id="CurrentCourses">
            <div class="col-sm-2 col-md-2">
                @if (userName != null && roleID == 1)
                {
                    @Html.Partial("_StudentNavigation")
                }
            </div>
            <div class="col-md-10 studentView">
                <div class="table-header gridPadding gridAlign">
                    <b>Coupon Details</b>
                </div>
                <div class="table-responsive gridPadding">
                    <table id="CouponsGridview" class="table table-striped table-bordered table-hover fullWidth tablediv">
                        <thead>
                            <tr>
                                <th>Voucher Code</th>
                                <th>Voucher Type</th>
                                <th>Expiry Date</th>
                                <th>Partner Name</th>
                                <th>Voucher Status</th>
                                <th>Activated By</th>
                                <th>Activated Course</th>
                                <th>Blocked On</th>
                                <th>Blocked Reason</th>
                                <th>Created On</th>
                                <th>Created By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VouchCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VoucherType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PartnerName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VoucherStatus)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ActivatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ActivatedCourse)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BlockedOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BlockedReason)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div><!-- End col-md-8  -->
        </div><!-- End row -->



    </div><!-- End container -->
</section>
