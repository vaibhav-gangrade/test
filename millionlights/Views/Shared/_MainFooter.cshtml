        <script type="text/javascript">
            function CustomersQuery() {
                var queryEmail = $('#email_newsletter').val();
                var fullName = '';
                var message = '';
                if (queryEmail != "") {
                    if (isEmail(queryEmail) == false) {
                        bootbox.dialog({
                            message: "Please enter valid email id.",
