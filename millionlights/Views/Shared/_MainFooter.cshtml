                                "success": {
                                    "label": "OK",
                                    "className": "btn-sm btn-primary",
                                    callback: function () {
                                    }
                                }
                            }
                        });
                        return false;
                    }
                    else {
                        $.ajax({
                            type: "POST",
                            async: false,
                            data: JSON.stringify({ "queryEmail": queryEmail, "fullName": fullName, "message": message, "phoneNumber": null }),
                            contentType: 'application/json; charset=utf-8',
                            url: "/MarketingCampaign/CustomersQuery",
