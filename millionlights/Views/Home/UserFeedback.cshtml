@{
    ViewBag.Title = "User Feedback";
    var IsSccuess = ViewBag.IsSuccess;
}
<section id="main_content" style="background-color:#f9f9f9 !important;">
    <div class="row">
        <div class="col-sm-12" style="background-image: url('../Images/UserFeedback.jpg');background-repeat:no-repeat;height:300px;background-size:100%;margin-top:-20px;">

        </div>
        <div class="col-sm-12" style="width: 60%;margin-left: 20%;">
            <section id="main_content" style="background-color:#f9f9f9 !important;">
                @* <div>
            <div class="row">
                <div class="col-md-12">*@
                <div class=" box_style_2" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    <div class="row">
                        <div class="col-md-12" style="margin-top: -24px; text-align: center;">

                            <h4>What do you think?</h4>

                            <hr />

                        </div>
                    </div>
                    <div id="message-contact"></div>
                    @using (Html.BeginForm("UserFeedbackEmail", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", onsubmit = "return ValidateCareer();" }))
                    {
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <input type="text" class="form-control style_2" id="name_feedback" name="name_feedback" placeholder="Enter your Name (optional)">
                                    <span class="input-icon"><i class="icon-user"></i></span>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <input type="email" id="email_feedback" name="email_feedback" class="form-control style_2" placeholder="Enter Email">
                                    <span class="input-icon"><i class="icon-email"></i></span>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <textarea rows="5" cols="5" id="message_feedback" name="message_feedback" class="form-control contact-message" placeholder="Write your feedback message here.." style="height:100px !important;resize:none;"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <label id="lblPwdError" class="colorRed"></label>
                                <label id="lblSuccess" class="colorGreen"></label><br>
                                <button id="submit-contact" type="submit" class="button_medium" style="background-color: #008278 !important">
                                    <i class="bigger-110"></i>
                                    Submit
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>

    </div>
</section>
<script>
    $(document).ready(function () {
        var IsSuccess = '@IsSccuess'
        if (IsSuccess != '' && IsSuccess == 'True') {
            $('#lblSuccess')[0].innerHTML = "Your feedback is submitted successfully";
            $('#lblPwdError')[0].innerHTML = "";
        }
        if (IsSuccess != '' && IsSuccess == 'False') {
            $('#lblSuccess')[0].innerHTML = "";
            $('#lblPwdError')[0].innerHTML = "We're sorry. We can't send your feedback now. Please try later.";
        }
    });

    function ValidateCareer() {
        $('#lblSuccess')[0].innerHTML = "";
        var email = $('#email_feedback')[0].value;
        var emailRegEx = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        var isValid = true;

        if (email.length == 0 || !emailRegEx.test(email)) {
            $('#lblPwdError')[0].innerHTML = "Please enter valid email Id";
            isValid = false;
        }
        else {
            $('#lblPwdError')[0].innerHTML = "";
        }
        if (isValid == false) {
            return false;
        }
        else {
            return true;
        }
    }

</script>