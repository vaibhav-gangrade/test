
@{
    ViewBag.Title = "Milion Lights - Microsoft Courses & Certification in India";
}

@section Scripts
{

    <script>
        $(document).ready(function () {
            if ($("#box1").is(":hidden")) {
                $("#box1").slideDown("slow");
            }
            else {
                $("#box1").hide();
            }

            $("#sepration1").hover(function () {
                $("#box2").slideDown("slow");
                $("#step2").slideDown("slow");
                $("#sepration2").slideDown("slow");
            });

            $("#sepration2").hover(function () {
                $("#box3").slideDown("slow");
                $("#step3").slideDown("slow");
                $("#sepration3").slideDown("slow");
            });

            $("#sepration3").hover(function () {
                $("#step4").slideDown("slow");
                $("#box4").slideDown("slow");
                $("#box5").slideDown("slow");
            });


        });


    </script>

}


<div @*class="container"*@>
    <div class="row">
        <div class="row">
            <div class="col-sm-1 col-md-1"></div>
            <div class="col-sm-6 col-md-6">
                <h2>Four simple steps to attend the exam</h2>
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-8">
                    <div class="box" id="box1" hidden>
                        <div class="row">
                            <img style="padding-top: 3%; margin-left: -4%; position: absolute; z-index:999;" id="step1" src="~/Content/learn/img/1.png">
                            <div class="col-sm-6 col-md-6">
                                <p> <img style="padding: 8% 0 0 15%" src="~/Content/learn/img/flipkart.jpg" /></p>
                            </div>
                            <div class="col-sm-6 col-md-6 ">
                                <h2 class="BlockHeading">Buy course on Flipkart</h2>
                                <p class="rightText">
                                    Students need to buy the course Flipkart to access the content based on official curriculum of Microsoft.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-8 sepration" id="sepration1">
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <img style="" src="~/Content/learn/img/arrowdown.png" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-8">
                    <div class="box" id="box2" hidden>
                        <div class="row">
                            <img style="padding-top: 10%; margin-left:92%; position: absolute; z-index:999;" id="step2" src="~/Content/learn/img/2.png">
                            <div class="col-sm-6 col-md-6 " style="padding-left:10%;">
                                <h2 class="BlockHeading">Search for exam center</h2>
                                <p>
                                    The student must search for the nearest  Certiport examination center before purchasing a Voucher from the Million LIghts website.
                                </p>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <img src="~/Content/learn/img/searchforcenter.png" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-8 sepration" id="sepration2" hidden>
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <img src="~/Content/learn/img/arrowdown.png" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-1 col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-sm-10 col-md-8">
                    <div class="box" id="box3" hidden>
                        <div class="row">
                            <img style="padding-top: 10%; margin-left: -4%; position: absolute; z-index:999;" id="step3" src="~/Content/learn/img/3.png">
                            <div class="col-sm-6 col-md-6">
                                <img src="~/Content/learn/img/Millionlights.jpg" />
