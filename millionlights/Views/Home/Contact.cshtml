@model Millionlights.Models.ContactUs

@{
    ViewBag.Title = "";
     int roleID = 0;
    if (Session["RoleID"] != null)
    {
        roleID = int.Parse(Session["RoleID"].ToString());
    }
    if (roleID != 0)
    {
        if (roleID == 1 || roleID == 3)
        {
            Layout = "~/Views/Shared/_AceLandingLayout.cshtml";
            @*<script src="~/Content/assets/js/jquery.js"></script>*@
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    var userName = Session["UserName"];
}
@{
    var messages = (Dictionary<string, string>)ViewBag.Messages;
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script type="text/javascript">
    function ContactUsQuery() {
        var isValid = ValidateContact();
        if (isValid == true) {
            var firstName = $('#name_contact')[0].value;
            var lastName = $('#lastname_contact')[0].value;
            var fullName = firstName + " " + lastName;
            var queryEmail = $('#email_contact')[0].value;
            var message = $('#message_contact')[0].value;
            //var phoneNumber = $('#phone_contact')[0].value;
            $.ajax({
                type: "POST",
                async: false,
                data: JSON.stringify({ "queryEmail": queryEmail, "fullName": fullName, "message": message }),
                contentType: 'application/json; charset=utf-8',
                url: "/MarketingCampaign/CustomersQuery",
                success: function (response) {
                    if (response == "true") {
                        $('#successMessage')[0].innerHTML = '@messages["QuerySubmit"]'
                    }
                    else {
                        $('#successMessage')[0].innerHTML = '@messages["NotSendEmailForIssue"]'
                    }
                },
                error: function (response) {
                    $('#successMessage')[0].innerHTML = '@messages["NotSendEmailForIssue"]'
                }
            });
        }
        return false;
    }
    function ValidateContact() {
        var isvalid = true;
        var firstName = $('#name_contact')[0].value;
        var lastName = $('#lastname_contact')[0].value;
        var email = $('#email_contact')[0].value;
        var message = $('#message_contact')[0].value;

        if (firstName.length == 0) {
            bootbox.dialog({
                message: "Please Enter Name.",
                buttons: {
                    "success": {
                        "label": "OK",
                        "className": "btn-sm btn-primary"
                    }
                }
            });
            isvalid = false;
        }
        else if (lastName.length == 0) {
            bootbox.dialog({
                message: "Please Enter Last Name.",
                buttons: {
                    "success": {
                        "label": "OK",
                        "className": "btn-sm btn-primary"
                    }
                }
            });
            isvalid = false;
        }
        else
            if (email.length == 0) {
                bootbox.dialog({
                    message: "Please Enter Email.",
                    buttons: {
                        "success": {
                            "label": "OK",
                            "className": "btn-sm btn-primary"
                        }
                    }
                });
                isvalid = false;
            }
	    else

                if (!isvalidateEmail(email)) {

                    bootbox.dialog({

                        message: "Please Enter Valid Email.",

                        buttons: {

                            "success": {

                                "label": "OK",

                                "className": "btn-sm btn-primary"

                            }

                        }

                    });

                    isvalid = false;

                }
            //else
            //    if (phoneNumber.length == 0) {
            //        bootbox.dialog({
            //            message: "Please Enter Phone Number.",
            //            buttons: {
            //                "success": {
            //                    "label": "OK",
            //                    "className": "btn-sm btn-primary"
            //                }
            //            }
            //        });
            //        isvalid = false;
            //    }
                else
                    if (message.length == 0) {
                        bootbox.dialog({
                            message: "Please Enter Message.",
                            buttons: {
                                "success": {
                                    "label": "OK",
                                    "className": "btn-sm btn-primary"
                                }
                            }
                        });
                        isvalid = false;
                    }
                    //else
                    //    if (verify.length == 0) {
                    //        bootbox.dialog({
                    //            message: "Please Enter Verification code.",
                    //            buttons: {
                    //                "success": {
                    //                    "label": "OK",
                    //                    "className": "btn-sm btn-primary"
                    //                }
                    //            }
                    //        });
                    //        isvalid = false;
                    //    }
                    //    else
                    //        if (verify.length > 0) {
                    //            if (verify != 4) {
                    //                bootbox.dialog({
                    //                    message: "Please Enter Correct Verification code.",
                    //                    buttons: {
                    //                        "success": {
                    //                            "label": "OK",
                    //                            "className": "btn-sm btn-primary"
                    //                        }
                    //                    }
                    //                });
                    //                isvalid = false;
                    //            }

                    //        }
        return isvalid;
    }
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function isvalidateEmail(email) {

        var filter = /^[\w\-\.\+]+\@@[a-zA-Z0-9\.\-]+\.[a-zA-z0-9]{2,4}$/;

        return filter.test(email);

    }
</script>
