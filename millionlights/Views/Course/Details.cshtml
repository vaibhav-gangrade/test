@model Millionlights.Models.Course

@{

    var userName = ViewBag.userId;
}
<link href="~/Content/learn/css/color_scheme.css" rel="stylesheet" />
@using (Html.BeginForm("StoreCourseInfo", "Order", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", @class = "form-horizontal"}))
{
    <input type="hidden" value=@userName id="userId" name="hidden1" />
    @Html.HiddenFor(m => m.Id) 
    <div class="box_style_2">
        <div class="form-horizontal">
            <h4>Course Details</h4>
            <hr />

            <div class="col-sm-6">
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.CourseName, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.ShortDescription, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.ShortDescription, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.BasePrice, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.BasePrice, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>


            </div>
            <div class="col-sm-6">
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.CourseCode, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.CourseCode, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.Rating, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>
                <div class="form-group formRegGroupCustom mrgBottom">
                    @Html.LabelFor(m => m.Duration, new { @class = "col-md-3 control-label lblTextAlign" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(m => m.Duration, new { @class = "form-control ", id = "", @readonly = true })
                    </div>
                </div>
            </div>
            <div>
                @Html.ActionLink("Cancel", "AllCourses", null, new { @class = "btnCancel floatLeft btmCancelMargleft btmMarTop" })
                <input type="submit" class="btnRegister btmMarTop" value="Buy Now" />
            </div>
           
        </div>
        </div>
       
}